# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication Configuration - Clerk API Integration
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
NEXT_PUBLIC_CLERK_FRONTEND_API=http://localhost:3000/api/clerk
NEXT_PUBLIC_CLERK_AUDIENCE=community-platform
NEXT_PUBLIC_CLERK_ISSUER=https://clerk.community-platform.com

# Analytics Service Configuration
NEXT_PUBLIC_ANALYTICS_API_ENDPOINT=http://localhost:3000/api/analytics
NEXT_PUBLIC_ANALYTICS_TIMEOUT=60000
NEXT_PUBLIC_ANALYTICS_BATCH_SIZE=100

# Event Integration Endpoints
NEXT_PUBLIC_LUMA_API_ENDPOINT=http://localhost:3000/api/events/luma
NEXT_PUBLIC_EVENTBRITE_API_ENDPOINT=http://localhost:3000/api/events/eventbrite
NEXT_PUBLIC_PARTIFUL_API_ENDPOINT=http://localhost:3000/api/events/partiful

# Performance Configuration
NEXT_PUBLIC_GRAPH_QUERY_TIMEOUT=2000
NEXT_PUBLIC_CACHE_DURATION=300000
NEXT_PUBLIC_MAX_BATCH_SIZE=1000

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=1000
NEXT_PUBLIC_RATE_LIMIT_WINDOW=3600000

# Security Configuration
NEXT_PUBLIC_ENABLE_HMAC_SIGNATURE=true
NEXT_PUBLIC_SIGNATURE_HEADER=X-Request-Signature

# Development Features
NEXT_PUBLIC_ENABLE_DEBUG_LOGGING=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
NEXT_PUBLIC_ENABLE_API_MOCKING=false

# Visualization Configuration
NEXT_PUBLIC_DEFAULT_GRAPH_WIDTH=800
NEXT_PUBLIC_DEFAULT_GRAPH_HEIGHT=600
NEXT_PUBLIC_ANIMATION_DURATION=300

# Node Environment
NODE_ENV=development