# Node Environment
NODE_ENV=production

# API Configuration
NEXT_PUBLIC_API_URL=https://api.communityplatform.com/v1
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_MAX_RETRIES=3
NEXT_PUBLIC_API_RATE_LIMIT=1000

# Authentication Configuration
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=${CLERK_PUBLISHABLE_KEY}
NEXT_PUBLIC_CLERK_FRONTEND_API=https://clerk.communityplatform.com
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# Analytics Service Configuration
NEXT_PUBLIC_ANALYTICS_API_ENDPOINT=https://analytics.communityplatform.com/v1
NEXT_PUBLIC_ANALYTICS_TIMEOUT=60000
NEXT_PUBLIC_ANALYTICS_BATCH_SIZE=100
NEXT_PUBLIC_ANALYTICS_MAX_NODES=1000

# Event Integration Endpoints
NEXT_PUBLIC_LUMA_API_URL=https://api.lu.ma/v1
NEXT_PUBLIC_EVENTBRITE_API_URL=https://www.eventbriteapi.com/v3
NEXT_PUBLIC_PARTIFUL_API_URL=https://api.partiful.com/v1

# Performance & Security Settings
NEXT_PUBLIC_MAX_CONCURRENT_SESSIONS=3
NEXT_PUBLIC_SESSION_TIMEOUT=1800000
NEXT_PUBLIC_GRAPH_QUERY_TIMEOUT=30000
NEXT_PUBLIC_ENABLE_CACHE=true
NEXT_PUBLIC_CACHE_DURATION=300000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=true
NEXT_PUBLIC_ENABLE_MFA=true
NEXT_PUBLIC_ENABLE_RATE_LIMITING=true

# Monitoring & Observability
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_LOG_LEVEL=error

# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_CORS_ALLOWED_ORIGINS=https://*.communityplatform.com

# Visualization Settings
NEXT_PUBLIC_GRAPH_VIZ_MAX_NODES=1000
NEXT_PUBLIC_GRAPH_VIZ_ANIMATION_DURATION=300
NEXT_PUBLIC_GRAPH_VIZ_ENABLE_ACCESSIBILITY=true