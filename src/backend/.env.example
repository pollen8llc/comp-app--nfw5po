# Application Configuration
# Server environment and core settings
NODE_ENV=development
PORT=3000
API_VERSION=v1
LOG_LEVEL=debug

# Security Configuration
# CORS and rate limiting settings
ALLOWED_ORIGINS=http://localhost:3000,https://staging.domain.com,https://domain.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Authentication Configuration
# Clerk API v4.0.0 integration settings
CLERK_API_KEY=your_clerk_api_key_here
CLERK_JWT_PUBLIC_KEY=your_clerk_jwt_public_key_here

# Redis Configuration
# Redis Enterprise v7.0+ settings
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_TLS_ENABLED=true

# Neo4j Configuration
# Neo4j Enterprise v5.0+ settings
NEO4J_SCHEME=bolt
NEO4J_HOST=localhost
NEO4J_PORT=7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=community_platform
NEO4J_ENCRYPTION=true

# Service Configuration
# Microservice ports and timeouts
EVENT_SERVICE_PORT=4001
MEMBER_SERVICE_PORT=4002
ANALYTICS_SERVICE_PORT=4003
SERVICE_TIMEOUT=30000

# Event Integration
# Event platform API configurations
LUMA_API_KEY=your_luma_api_key_here
LUMA_API_URL=https://api.lu.ma/v1
EVENTBRITE_API_KEY=your_eventbrite_api_key_here
EVENTBRITE_API_URL=https://www.eventbriteapi.com/v3
PARTIFUL_API_KEY=your_partiful_api_key_here
PARTIFUL_API_URL=https://api.partiful.com/v1

# Monitoring Configuration
# APM and metrics collection settings
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here
PROMETHEUS_ENABLED=true
GRAFANA_API_KEY=your_grafana_api_key_here