{
  "name": "@community/api-gateway",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "security:audit": "npm audit && snyk test",
    "docker:build": "docker build -t api-gateway .",
    "docker:run": "docker run -p 3000:3000 api-gateway",
    "health:check": "node scripts/health-check.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.10.0",
    "@grpc/grpc-js": "1.9.0",
    "@grpc/proto-loader": "0.7.9",
    "@opentelemetry/api": "^1.4.1",
    "axios": "1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "16.3.1",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-redis-cache": "^1.1.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.2.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "opossum": "^7.1.0",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.0",
    "rate-limiter-flexible": "^2.4.1",
    "retry": "0.13.0",
    "uuid": "9.0.0",
    "winston": "3.10.0",
    "winston-daily-rotate-file": "^4.7.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "18.0.0",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.39.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-mock-express": "^0.2.0",
    "nock": "13.3.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "snyk": "^1.1130.0",
    "supertest": "^6.3.0",
    "ts-jest": "29.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}